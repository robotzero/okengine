{
	"$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
	"profile": "default",
	"profiles": [
		{ "name": "default", "checker_path": ["testbed/entry.main"]},
		{ "name": "linux_profile", "os": "linux", "checker_path": ["src/main.odin"]},
		{ "name": "windows_profile", "os": "windows", "checker_path": ["src"]}
	],
  "collections": [{ "name": "core",   "path": "/usr/lib/odin/core" },
                  { "name": "shared", "path": "/usr/lib/odin/shared" },
                  { "name": "vendor", "path": "/usr/lib/odin/vendor" },
                  { "name": "base", "path": "/usr/lib/odin/base" },
                  { "name": "dependencies", "path": "./dependencies"}],
  "thread_pool_count": 4,
  "enable_semantic_tokens": true,
  "enable_document_symbols": true,
  "enable_hover": true,
  "enable_format": true,
  "enable_snippets": true,
  "checker_args": "-vet -strict-style -debug",
  "formatter": {
    "tabs": true,
    "characters": 90
  },
  "verbose":true
}
